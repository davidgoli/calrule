{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "module": "es2015",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "target": "es5",
    "strictNullChecks": true,
    "importHelpers": true,
    "rootDirs": ["./src/"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}