{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "commonjs",
    "noEmitOnError": true,
    "target": "es6",
    "baseUrl": ".",
    "outDir": "./lib",
    "rootDirs": [
      "./src/",
    ]
  },
  "include": [
    "./src/**/*",
  ],
  "exclude": [
    "node_modules", "lib",
  ]
}